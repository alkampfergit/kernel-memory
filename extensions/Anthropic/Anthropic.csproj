<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <RollForward>LatestMajor</RollForward>
        <AssemblyName>Microsoft.KernelMemory.AI.Anthropic</AssemblyName>
        <RootNamespace>Microsoft.KernelMemory.AI.Anthropic</RootNamespace>
        <NoWarn>$(NoWarn);CA1724;CS1591;CA1812;</NoWarn>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.KernelMemory.Abstractions" Condition="'$(SolutionName)' != 'KernelMemoryDev'" />
        <ProjectReference Include="..\..\service\Abstractions\Abstractions.csproj" Condition="'$(SolutionName)' == 'KernelMemoryDev'" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Http" />
        <PackageReference Include="Microsoft.Extensions.DependencyInjection" />
        <PackageReference Include="TiktokenSharp" />
    </ItemGroup>

    <ItemGroup>
        <None Remove="Files\cl100k_base.tiktoken" />
        <Content Include="Files\cl100k_base.tiktoken">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </Content>
    </ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Microsoft.UnitTests" />
    </ItemGroup>

    <PropertyGroup>
        <IsPackable>false</IsPackable>
        <PackageId>Microsoft.KernelMemory.AI.Anthropic</PackageId>
        <Product>Anthropic LLM connector for Kernel Memory</Product>
        <Description>Provide access to Anthropic LLM models in Kernel Memory</Description>
        <PackageTags>Anthropic, Claude, Haiku, Sonnet, Opus, Memory, RAG, Kernel Memory, Azure Blob, Semantic Memory, Episodic Memory, Declarative Memory, AI, Artificial Intelligence, Embeddings, Vector DB, Vector Search, Memory DB, ETL</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <None Include="README.md" Link="README.md" Pack="true" PackagePath="." Visible="false" />
    </ItemGroup>
</Project>
